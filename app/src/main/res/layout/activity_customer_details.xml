<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customerDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:gravity="center"
            android:hint="Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:minHeight="48dp"
            android:hint="Contact"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:hint="Address"
            android:textColor="@color/black" />


        <AutoCompleteTextView
            android:id="@+id/editTextBikeManufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:hint="Bike Manufacturer"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextBikemodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:hint="Bike Model"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextbuildyear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:minHeight="48dp"
            android:hint="Bike Build Year"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextbikeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:minHeight="48dp"
            android:hint="Bike No."
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextdailyrunning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:hint="Daily Running"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnadd"
            android:layout_width="234dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:text="Add"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>